/var/log/hostdb/*.log {
        daily
        missingok
        notifempty
        dateext
        compress
        delaycompress
        create 644 www-data www-data
        sharedscripts
        postrotate
                [ ! -f /var/run/apache2.pid ] || kill -HUP `cat /var/run/apache2.pid`
        endscript
}
